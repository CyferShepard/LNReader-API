{
  "url": "https://novelbuddy.io/search?page=${1}",
  "type": "GET",
  "bodyType": "JSON",
  "waitForPageLoad": false,
  "waitDuration": 5000,
  "query": [
    {
      "label": "results",
      "element": ".book-item",
      "getContent": true,
      "withHref": false,
      "subQuery": [
        {
          "label": "url",
          "element": ".meta>.title>h3>a",
          "getContent": true,
          "withHref": true
        },
        {
          "label": "title",
          "element": ".meta>.title>h3>a",
          "getContent": true,
          "withHref": false
        },
        {
          "label": "summary",
          "element": ".meta>.summary>p",
          "getContent": true,
          "withHref": false
        },
        {
          "label": "cover",
          "element": ".thumb>a>.lazy",
          "getContent": true,
          "withHref": false,
          "dataProp": "data-src",
          "regex": {
            "process": ""
          },
          "transformProcess": "(value)=>{\n            if (value.startsWith(\"//\")) {\n              return \"https:\"+ value;\n            } else {\n              return value;\n            }\n          }"
        },
        {
          "label": "genres",
          "element": ".meta>.genres>span",
          "getContent": true,
          "withHref": false
        },
        {
          "label": "chapterCount",
          "getContent": true,
          "withHref": false
        }
      ]
    },
    {
      "label": "currentPage",
      "element": ".paginator>.active",
      "getContent": true,
      "withHref": false,
      "transformProcess": "(value) => (!isNaN(value) ? parseInt(value) : null)"
    },
    {
      "label": "lastPage",
      "element": ".paginator>a",
      "getContent": true,
      "withHref": false
    }
  ]
}
